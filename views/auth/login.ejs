<!-- Header -->
<header class="navbar navbar-default navbar-fixed-top">
    <!-- Header Brand -->
    <a href="#" class="navbar-brand glyphicon-music">
        <span>AliceBox</span>
    </a>
    <!-- END Header Brand -->
</header>
<!-- END Header -->

<!-- Login Container -->
<div id="login-container">
    <!-- Page Content -->
    <div id="page-content" class="block remove-margin animation-bigEntrance">
        <!-- Login Title -->
        <div class="block-header">
            <div class="header-section">
                <h1 class="text-center">Welcome to AliceBox<br></h1>
            </div>
        </div>
        <!-- END Login Title -->
     
        <!-- Login Form -->
        <div class="form-horizontal">
            <div class="form-group">
                <!-- Social Login -->
                <div class="col-xs-6">
                    <a href="/auth/google/return" class="btn btn-lg btn-info btn-block"><i class="fa social-google_plus"></i> Gmail</a>
                </div>
                <div class="col-xs-6">
                    <a href="/auth/facebook/callback" class="btn btn-lg btn-info btn-block"><i class="fa social-facebook"></i> Facebook</a>
                </div>
                <div class="col-xs-6">
                    <a href="/auth/twitter/callback" class="btn btn-lg btn-info btn-block"><i class="fa social-twitter"></i> Twitter</a>
                </div>
                <div class="col-xs-6">
                    <a href="/auth/yahoo/return" class="btn btn-lg btn-info btn-block"><i class="fa social-yahoo"></i> Yahoo</a>
                </div>
                <!-- END Social Login -->
            </div>
            <div class="form-group">
                <div class="col-xs-12">
                    <a href="/auth/dropbox2/callback" class="btn btn-lg btn-primary btn-block animation-pulse"><i class="fa social-dropbox"></i> Dropbox</a>
                </div>
            </div>
        </div>
        <!-- END Login Form -->
        
    </div>
    <!-- END Page Content -->
</div>
<!-- END Login Container -->